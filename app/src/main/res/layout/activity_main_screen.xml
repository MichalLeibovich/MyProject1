<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreen_bkg_pic"
    tools:context=".MainScreenActivity">


    <Button
        android:id="@+id/play_button"
        android:layout_width="132dp"
        android:layout_height="81dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/mainscreen_playbutton_design"
        android:fontFamily="casual"
        android:onClick="playClicked"
        android:text="Play"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_image" />

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="293dp"
        android:layout_height="254dp"
        android:layout_marginStart="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_sketchparty" />

    <Button
        android:id="@+id/mygallery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/mainscreen_mygallery_design"
        android:fontFamily="casual"
        android:onClick="MyGalleryClicked"
        android:text="My Gallery"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accounts_button" />

    <Button
        android:id="@+id/accounts_button"
        android:layout_width="196dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/mainscreen_accountsbutton_design"
        android:drawableLeft="@drawable/mainscreen_accountsbutton_pic"
        android:onClick="accountsButtonClicked"
        android:text="change account or create a new one"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_image" />

    <TextView
        android:id="@+id/textView_usernameMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_image" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/accounts_button"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="questionMarkClicked"
        app:srcCompat="@drawable/mainscreen_quesmark_pic" />


</androidx.constraintlayout.widget.ConstraintLayout>